# AWS Configuration
aws_region  = "us-east-1"
aws_profile = "your-aws-profile"

# Project
project_name = "alvorada-user-profile"
environment  = "dev"

# Secrets
system_secret_value = "your-secret-value"
db_password         = "your-secure-db-password"

